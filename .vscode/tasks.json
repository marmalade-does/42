
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/z_circle_02/push_swap/srcs/main.c",
                "${workspaceFolder}/z_circle_02/push_swap/srcs/input_c.c",
                "${workspaceFolder}/z_circle_02/push_swap/srcs/utils1.c",
                "-I${workspaceFolder}/z_circle_02/push_swap/includes",
                "-o",
                "${workspaceFolder}/z_circle_02/push_swap/a.out",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building the C program."
        }
    ]
}

